<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/mainGray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/color1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color1" />

        <ImageView
            android:id="@+id/color2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color2" />

        <ImageView
            android:id="@+id/color3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/color4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color4" />

        <ImageView
            android:id="@+id/color5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color5" />

        <ImageView
            android:id="@+id/color6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/color7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color7" />

        <ImageView
            android:id="@+id/color8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color8" />

        <ImageView
            android:id="@+id/color9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/colorPadding"
            android:paddingRight="@dimen/colorPadding"
            android:layout_margin="@dimen/colorMargin"
            android:src="@drawable/circle"
            app:tint="@color/color9" />
    </LinearLayout>

</LinearLayout>